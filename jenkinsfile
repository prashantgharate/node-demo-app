pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

    stages {
        stage('Build') {
            steps {
                echo 'üîß Installing Dependencies...'
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'üß™ Running Tests...'
                sh 'npm test || echo "‚ö†Ô∏è Tests failed, continuing..."'
            }
        }

        stage('Deploy') {
            steps {
                echo 'üöÄ Deploying the App...'
                sh 'pkill node || true'
                sh 'nohup node index.js > output.log 2>&1 &'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Deployment Successful!'
        }
        failure {
            echo '‚ùå Pipeline Failed!'
        }
    }
}

